data=pd.read_csv('bit1.csv',encoding='CP949',thousands=',')  # 비트코인 2017년1월 1일-2020년 8월26일
dat=data.dropna()

high = dat['high'] 
low = dat['low']
data=(high+low)/2             #평균가 계산

date=range(len(data))

global total_data   #전역변수
total_data=[date,data]      #total_data[t,평균가]


inf=5000000
#LPPL의 limit 설정
#limit = ([max(p),inf ], [-inf, 0], [-1, 1], [t, inf], [0.1,0.9], [4.8,13], [0, 2*np.pi])
#           a                b          c      tc       m           w            pi

    
global t_
t_=total_data[0]  

plt.title('price data')
plt.plot(range(len(data)),data)
plt.xlabel('index')
plt.ylabel('price')
dat.tail()
